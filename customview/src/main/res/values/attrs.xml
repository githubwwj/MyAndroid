<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTextView">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="borderWidth" format="dimension" />
        <attr name="outColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="startColor" format="color" />
        <attr name="centerColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="arcLineColor" format="color" />
        <attr name="unit" format="string" />
        <attr name="currentStep" format="integer" />
        <attr name="maxStep" format="integer" />
        <attr name="startAngle" format="float" />
        <attr name="endAngle" format="float" />
        <attr name="arcLineWidth" format="dimension" />
        <attr name="isCircle" format="boolean" />
        <attr name="isShowStep" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LetterSlideBar">
        <attr name="selectTextColor" format="color" />
    </declare-styleable>


    <declare-styleable name="TrainTimeView">
        <attr name="trainBorderWidth" format="dimension" />
        <attr name="trainBorderColor" format="color" />

        <attr name="leftWidth" format="dimension" />
        <attr name="centerWidth" format="dimension" />
        <attr name="rightWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color" />
        <attr name="waveBorderWidth" format="dimension" />
        <attr name="waveRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BioFeedbackView">
        <attr name="bioBorderLineColor" format="color" />
        <attr name="bioTextColor" format="color" />
        <attr name="bioTitleColor" format="color" />
        <attr name="bioTitle" format="string" />
        <attr name="bioCommitTextColor" format="color" />
        <attr name="bioBottomFirstLineColor" format="color" />
        <attr name="bioBottomSecondLineColor" format="color" />
        <attr name="bioBorderWidth" format="dimension" />
        <attr name="bioOffsetY" format="dimension" />
        <attr name="bioIsDrawVerticalLine" format="boolean" />
    </declare-styleable>
</resources>